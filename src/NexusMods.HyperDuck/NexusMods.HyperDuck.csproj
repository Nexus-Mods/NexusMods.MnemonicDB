<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="$([MSBuild]::GetPathOfFileAbove('NuGet.Build.props', '$(MSBuildThisFileDirectory)../'))"/>
    <PropertyGroup>
        <RootNamespace>NexusMods.HyperDuck</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <ItemGroup>
        <!-- Using .nupkg convention for auto extract. -->
        <None Update="runtimes\win-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/win-x64</PackagePath>
        </None>

        <None Update="runtimes\osx-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/osx-x64</PackagePath>
        </None>

        <None Update="runtimes\linux-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/linux-x64</PackagePath>
        </None>

        <None Update="build\NexusMods.HyperDuck.targets">
            <Pack>true</Pack>
            <PackagePath>build\NexusMods.HyperDuck.targets</PackagePath>
        </None>
    </ItemGroup>
    <ItemGroup>
      <Content Include="HyperDuck.csproj" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    </ItemGroup>
</Project>
